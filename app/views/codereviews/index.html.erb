<% if @codereviews.any? %>
  <% @codereviews.each do |codereview| %>
    <h2><%= codereview.title %></h2>
    <h2><%= link_to codereview.url, url_for(codereview.url) %></h2>
    <p><%= codereview.user.name %></p>
    <p><img src="<%= codereview.user.image %>"></p>
  <% end %>
<% else %>
  <h1>No reviews yet<

  </p>/h1>
<% end %>

