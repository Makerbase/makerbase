<!DOCTYPE html>
<html>
<head>
  <title>Makerbase</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/paper/bootstrap.min.css">
  <link rel="stylesheet" href="/css/stylesheet.css">
</head>
<body>
  <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">

          <!-- <a class="navbar-brand" href="/">
            <span class="glyphicon glyphicon-barcode" aria-hidden="true"></span>
          </a> -->

          <a class="navbar-text" href="/">
            <span>Maker::BASE</span>
          </a>

          <% if user_signed_in? %>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn navbar-right" %>
            <span><img src="<%= current_user.image if current_user %>" class="img-circle"></span>
          <% end %>

        </div>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

  </div>
</body>
</html>
