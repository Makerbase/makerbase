<% if @posts.any? %>
  <% Tag.all.each do |tag| %>
    <span><button><%= tag_link(tag) %></button></span>
  <% end %>

  <% @posts.each do |post| %>
    <article>
      <p><%= link_to post.title, post_path(post) %></p>
      <p><%= link_to post.link, "http://#{post.link}" %></p>
      <span>posted by: <%= post.user.name %></span>
      <p>Likes: <%= post.likes.count %></p>
      <p>Dislikes: <%= post.dislikes.count %></p>
      <p><%= raw tag_links(post.all_tags) %></p>

      <% if post.user == current_user %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Delete', post_path(post), method: :delete %>
      <% end %>

      <p><%= post.all_tags %></p>

      <%= button_to 'Like', post_likes_path(post), method: :create %>
      <%= button_to 'Dislike', post_dislikes_path(post), method: :create %>
    </article>
  <% end %>
<% else %>
No links yet
<% end %>
<%= link_to 'Add a link', new_post_path %>

