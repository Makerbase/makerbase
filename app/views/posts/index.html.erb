<% if @posts.any? %>
  <% Tag.all.each do |tag| %>
    <span><button class="btn btn-default btn-xs"><%= tag_link(tag) %></button></span>
  <% end %>
  <% @posts.each do |post| %>
    <article>

      <div class="panel panel-default">
        <p class="post-title"><%= link_to post.title, post_path(post) %></p>        
        <p class="glyphicon glyphicon-hand-up" ><%= post.likes.count %></p>
        <p class="glyphicon glyphicon-hand-down" ><%= post.dislikes.count %></p>
      
        <div>
          <p>posted by: <%= post.author %></p>
          <p><%= raw tag_links(post.all_tags) %></p>
        </div>
        
        <div>
          <p>url: <%= link_to post.link, "http://#{post.link}" %></p>
          <p>tags: <%= post.all_tags %></p>
        </div>

        <div class="buttons-posts">
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to "Delete", post_path(post), method: :delete %>
          <%= link_to 'Like', post_likes_path(post), method: :create %>
          <%= link_to 'Dislike', post_dislikes_path(post), method: :create %>
        </div>
      </div>

    </article>
  <% end %>
<% else %>
No links yet
<% end %>
<button class="btn btn-default btn-large"><%= link_to 'Add a link', new_post_path %></button>


