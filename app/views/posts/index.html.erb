<% if @posts.any? %>
  <% @posts.each do |post| %>
    <article> 
      <p><%= post.title %></p>
      <a href="#"><%= post.link %></a>
      <p><%= post.all_tags %></p>
      <%= button_to "Delete", post_path(post), method: :delete %>
    </article>
  <% end %>
<% else %>
No links yet
<% end %>  
<%= link_to 'Add a link', new_post_path %>